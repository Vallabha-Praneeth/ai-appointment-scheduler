# n8n Configuration
# Your n8n instance URL (cloud or self-hosted)
N8N_INSTANCE_URL=https://your-instance.app.n8n.cloud

# Google Calendar Configuration
# The email address of the Google Calendar to use for appointments
GOOGLE_CALENDAR_ID=your-calendar@gmail.com

# Twilio Configuration
# Your Twilio phone number for sending SMS (E.164 format)
TWILIO_PHONE_NUMBER=+1234567890
# Your Twilio Account SID
TWILIO_ACCOUNT_SID=your_twilio_account_sid
# Your Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Security Configuration
# Secret key for JWT token signing (use a strong random string)
JWT_SECRET=your-strong-secret-key-here
# Secret for webhook authentication (use a strong random string)
WEBHOOK_SECRET=your-webhook-secret-here

# Business Hours Configuration
# Business hours in 24-hour format (HH:MM)
BUSINESS_HOURS_START=10:00
BUSINESS_HOURS_END=18:00
# Default timezone (IANA timezone identifier)
DEFAULT_TIMEZONE=America/Chicago

# OpenAI Configuration
# Your OpenAI API key for GPT-4o
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vapi Configuration (Optional - if managing via environment)
# Your Vapi organization ID
VAPI_ORG_ID=your-vapi-org-id
# Your Vapi API key
VAPI_API_KEY=your-vapi-api-key

# Optional: Email Configuration (if adding email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Monitoring Configuration
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info
